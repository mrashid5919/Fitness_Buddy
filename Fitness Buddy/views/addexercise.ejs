<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>AddExercisePage</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lemon&family=Montserrat:wght@900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="css/styles.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </head>



    <body>

      <div class="container-fluid" id="header-container">
        <div class="row">
          <div class="col-lg-8">
            <h3>
              <img
                src="images/logo.jpg"
                alt=""
                width="47"
                height="44"
                class="d-inline-block align-text-top"
              />FitnessBuddy
            </h3>
          </div>
          <div class="col-lg-4">
            <h6>Hi, <%=cur_user[1]%> <a href="/"
              > <img src="images/logout.jpg" alt="logout" height="30px"></a> </h6>
          </div>
        </div>
      </div>
  
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid mx-5 px-5">
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/home">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/food">Food</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/exercise">Exercise</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/viewgoals">Goals</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/profile">Profile</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>


      <div class="container-fluid" id="home-upper-container" style="background-color:#e6e9ed;">
        <div class="row justify-content-center" >
          <div class="col-6">
        <form action="/addexercise" method="post">
            <div class="form-floating mb-4">
                <input
                  type="text"
                  class="form-control"
                  id="userName"
                  placeholder="Enter exercise name"
                  name="item"
                />
                <label for="userName">Add Exercise</label>
              </div>

              <div class="text-center mb-4">
                <input
                  class="btn btn-dark"
                  type="submit"
                  value="Search"
                />
              </div>
        </form>
        </div>
      </div>

        
          <div class="row justify-content-center">
            <div class="col-lg-8 mt-4">
        <form action="/test2" method="post">
          <table class="table">
            <thead class="table-dark">
            <% if(items.length>0){ %>
              <th scope="col">Exercise ID</th>
              <th scope="col">Related Exercises</th>
              <th scope="col">Burnt Calories</th>
              <th scope="col">Unit Duration</th>
            <% } %>
          </thead>
          
        <% for(var i=0; i< items.length; i++) {%>
           <tr id= <%=items[i][0]%> >
            <td class="row-data"><%=items[i][0]%></td>
             <td class="row-data">
               <%=items[i][1]%>
             </td>
             <td class="row-data"><%=items[i][2]%></td>
             <td class="row-data"> <%=items[i][3]%></td>
           </tr>
        <% } %>
      </table>
      <% if(items.length>0){ %>
        <hr/>
        
        <div class="form-floating mb-4">
          <input
            type="text"
            class="form-control"
            id="userName"
            placeholder="Enter exercise ID"
            name="id"
          />
          <label for="userName">Add ID</label>
        </div>
      

        <div class="form-floating mb-4">
          
          <input
            type="text"
            class="form-control"
            id="exampleInputServing"
            placeholder="Enter exercise duration"
            name="duration"
          />
          <label for="exampleInputServing"
            >Exercise Duration</label
          >
        </div>

        <div class="col-lg-8">
          <div class="row mb-2">
            <h6> Select Date:</h6>
          </div>
          <div class="row mb-4">
            
            <div class="form-outline datepicker w-100">
              <input
                type="date"
                class="form-control form-control-lg"
                id="currentDate"
                name="date"
              />
            </div>
          </div>

        <div class="text-center mb-4">
          <input
            class="btn btn-dark"
            type="submit"
            value="Submit"
          />
        </div>
        <% } %>
        </form>
    </div>
    </div>
    </div>
    </body>
</html>