<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>AddExercisePage</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lemon&family=Montserrat:wght@900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="css/styles.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </head>



    <body>
        <form action="/addexercise" method="post">
            <div class="form-floating mb-4">
                <input
                  type="text"
                  class="form-control"
                  id="userName"
                  placeholder="Enter exercise name"
                  name="item"
                />
                <label for="userName">Add Exercise</label>
              </div>

              <div class="text-center mb-4">
                <input
                  class="btn btn-dark"
                  type="submit"
                  value="Search"
                />
              </div>
        </form>
        <div class="container-fluid" id="home-upper-container" style="background-color:#ffffff;">
          <div class="row justify-content-center">
            <div class="col-lg-6 mt-4">
        <form action="/test2" method="post">
          <table class="table">
            <% if(items.length>0){ %>
              <th scope="col">Exercise ID</th>
              <th scope="col">Related Exercises</th>
              <th scope="col">Burnt Calories</th>
              <th scope="col">Unit Duration</th>
            <% } %>
          
        <% for(var i=0; i< items.length; i++) {%>
           <tr id= <%=items[i][0]%> >
            <td class="row-data"><%=items[i][0]%></td>
             <td class="row-data">
               <%=items[i][1]%>
             </td>
             <td class="row-data"><%=items[i][2]%></td>
             <td class="row-data"> <%=items[i][3]%></td>
           </tr>
        <% } %>
      </table>
      <% if(items.length>0){ %>
        <div class="form-floating mb-4">
          <input
            type="text"
            class="form-control"
            id="userName"
            placeholder="Enter exercise ID"
            name="id"
          />
          <label for="userName">Add ID</label>
        </div>

        <div class="mb-3">
          <label for="exampleInputServing" class="form-label"
            >Exercise Duration</label
          >
          <input
            type="text"
            class="form-control"
            id="exampleInputServing"
            name="duration"
          />
        </div>

        <div class="col-lg-8">
          <div class="row mb-4">
            <h5>Select Date:</h5>
            <div class="form-outline datepicker w-100">
              <input
                type="date"
                class="form-control form-control-lg"
                id="currentDate"
                name="date"
              />
            </div>
          </div>

        <div class="text-center mb-4">
          <input
            class="btn btn-dark"
            type="submit"
            value="Submit"
          />
        </div>
        <% } %>
        </form>
    </div>
    </div>
    </div>
    </body>
</html>