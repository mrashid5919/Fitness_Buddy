<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Exercise</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lemon&family=Montserrat:wght@900&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="css/styles.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="container-fluid" id="header-container">
      <div class="row">
        <div class="col-lg-8">
          <h3>
            <img
              src="images/logo.jpg"
              alt=""
              width="47"
              height="44"
              class="d-inline-block align-text-top"
            />FitnessBuddy
          </h3>
        </div>
        <div class="col-lg-4">
          <h6>Hi, <%=cur_user[1]%> <a href="/"
            > <img src="images/logout.jpg" alt="logout" height="30px"></a> </h6>
        </div>
      </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid mx-5 px-5">
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/food">Food</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/exercise">Exercise</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/viewgoals">Goals</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile">Profile</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div
      class="container-fluid"
      id="home-upper-container"
      style="background-color:#e6e9ed"
    >
    <div class="row" >
      <div class="col-lg-8">
        <h5>Your Exercise Diary For</h5>
        <form action="/exercise" method="post">
          <div class="row mb-4" >
            <div class="form-outline datepicker w-100">
              <input
                type="date"
                class="form-control form-control-lg"
                id="currentDate"
                name="date"
              />
            </div>
          </div>
          <div class="row mb-4 mt-3" >
            <div class="text-center mb-4">
            <input
              class="btn btn-dark"
              type="submit"
              value="Submit"
            />
          </div>
        </div>
        </form>
      </div>
    </div>
        
         
    <div class="row justify-content-center">  
      <div class="col-lg-12 mt-1">
        <h5 class="mb-3">Exercise Info</h5>
        <div class="table-responsive-xl">
          <table class="table align-middle table-striped-columns">
            <tr>
             <thead class="table-dark">
              <th>Exercise Name</th>
                <th>Time spent</th>
                <th>Burnt Calories</th>
             </thead>
             <tbody>
              <% for(var i=0; i< dat.length; i++) {%>
                <tr>
                 <td> <%=dat[i][0]%> </td>
                 <td> <%=dat[i][1]%> <%=dat[i][2]%></td>
                <td><%=dat[i][3]%> </td>
                </tr>
             <% } %>
             </tbody>
            </tr>
          </table>
        </div>       
      </div>
    </div>



    <div class="row ">  
      <div class="col-8 mt-4">
    <div class="table-responsive-xl">
    <table>
      <tr>
        <th scope="row">Done</th>
        <% for(var i=0;i<cur_done.length;i++) {%>
          <td> <%=cur_done[i]%></td>
        <% } %>
      </tr>
      <tr>
        <th scope="row">Goal</th>
        <% for(var i=0;i<cur_total.length;i++) {%>
          <td> <%=cur_total[i]%></td>
        <% } %>
      </tr>
      <tr>
        <th scope="row">Remaining</th>
        <% for(var i=0;i<cur_remain.length;i++) {%>
          <td> <%=cur_remain[i]%></td>
        <% } %>
      </tr>
    </table>
    </div>
    </div>
    </div>

    </div>
  </body>
</html>
