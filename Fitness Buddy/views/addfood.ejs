    <body>
        <form action="/addfood" method="post">
            <div class="form-floating mb-4">
                <input
                  type="text"
                  class="form-control"
                  id="userName"
                  placeholder="Enter food name"
                  name="item"
                />
                <label for="userName">Add Item</label>
              </div>

              <div class="text-center mb-4">
                <input
                  class="btn btn-dark"
                  type="submit"
                  value="Search"
                />
              </div>
        </form>
        <div class="container-fluid" id="home-upper-container" style="background-color:#ffffff;">
          <div class="row justify-content-center">
            <div class="col-lg-6 mt-4">
        <form action="/test" method="post">
          <table class="table">
            <% if(items.length>0){ %>
              <th scope="col">Item ID</th>
              <th scope="col">Related Food Items</th>
              <th scope="col">Calories</th>
              <th scope="col">Unit quantity</th>
              <th scope="col">Measurement Unit</th>
            <% } %>
          
        <% for(var i=0; i< items.length; i++) {%>
           <tr id= <%=items[i][0]%> >
            <td class="row-data"><%=items[i][0]%></td>
             <td class="row-data">
               <%=items[i][1]%>
             </td>
             <td class="row-data"><%=items[i][2]%></td>
             <td class="row-data"> <%=items[i][11]%></td>
             <td class="row-data"> <%=items[i][12]%></td>
           </tr>
        <% } %>
      </table>
      <% if(items.length>0){ %>
        <div class="form-floating mb-4">
          <input
            type="text"
            class="form-control"
            id="userName"
            placeholder="Enter food ID"
            name="id"
          />
          <label for="userName">Add ID</label>
        </div>

        <div class="mb-3">
          <label for="exampleInputServing" class="form-label"
            >Serving quantity</label
          >
          <input
            type="text"
            class="form-control"
            id="exampleInputServing"
            name="serving"
          />
        </div>

        <div class="col-lg-8">
          <div class="row mb-4">
            <h5>Select Date:</h5>
            <div class="form-outline datepicker w-100">
              <input
                type="date"
                class="form-control form-control-lg"
                id="currentDate"
                name="date"
              />
            </div>
          </div>
  

        <div class="mb-3">
          <label for="whichMeal" class="form-label">To which meal?</label>
          <select name="meal" class="form-select" aria-label="Default select example">
            <option value="Breakfast">Breakfast</option>
            <option value="Dinner">Dinner</option>
            <option value="Lunch">Lunch</option>
            <option value="Snacks">Snacks</option>
          </select>
        </div>

        <div class="text-center mb-4">
          <input
            class="btn btn-dark"
            type="submit"
            value="Submit"
          />
        </div>
        <% } %>
        </form>
