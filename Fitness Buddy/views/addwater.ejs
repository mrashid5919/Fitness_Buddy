    <body>
        <div>
            <p>How many glasses of water do you want to add?</p>
            <form action="/test3" method="post">
            <div class="form-floating mb-4">
            <input
                type="text"
                class="form-control"
                id="addwater"
                placeholder="Add water"
                name="addwater"
            />
            <label for="addwater">Write an integer</label>
        </div>
        <div class="col-lg-8">
            <div class="row mb-4">
              <h5>Select Date:</h5>
              <div class="form-outline datepicker w-100">
                <input
                  type="date"
                  class="form-control form-control-lg"
                  id="currentDate"
                  name="date"
                />
              </div>
            </div>
        <div class="row mb-4 mt-3" >
          <div class="text-center mb-4">
          <input
            class="btn btn-dark"
            type="submit"
            value="Submit"
          />
        </div>
        </div>
    </div>
